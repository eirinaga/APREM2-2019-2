#include <iostream>

using namespace std;

int main()
{
    int i = 0;
    int vet[6];
    int iContPar = 0;
    int iContImp = 0;

    for (i = 0; i < 6; i++)
    {
        cout << "Valor " << i << ": ";
        cin >> vet[i];
    }

    for (i = 0; i < 6; i++)
    {
        if (vet[i] % 2 == 0)
        {
            iContPar++;
        }

        if (vet[i] % 2 != 0)
        {
            iContImp++;
        }
    }

    cout << "\n\nTotal de pares: " << iContPar << endl;
    cout << "\n\nTotal de ímpares: "<< iContImp << endl;
}
