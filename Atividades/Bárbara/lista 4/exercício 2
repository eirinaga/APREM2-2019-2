#include <iostream>

using namespace std;

int main()
{
    int i = 0;
    int vet[7];
    int iMultD = 0;
    int iMultT = 0;
    int iMultX = 0;

    for (i = 0; i < 7; i++)
    {
        cout << "Valor " << i << " : ";
        cin >> vet[i];
    }

    for (i = 0; i < 7; i++)
    {
        if (vet[i] % 2 == 0)
        {
            iMultD++;
        }
    }
cout <<"Numeros multiplos de 2: "<< iMultD++<< endl;
    for (i=0; i<7; i++)
    {
        if (vet[i] % 3 == 0)
        {
            iMultT++;
        }
    }
cout << "Numeros multiplos de 3: "<<iMultT++<<endl;
    for (i=0; i<7; i++)
    {
        if (vet[i] % 2 == 0 && vet[i] % 3 == 0 )
        {
            iMultX++;    
        }
    }
cout << "Numeros multiplos de 2 e 3: "<<iMultX++<<endl;
}
